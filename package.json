{
  "name": "graphql-typescript-server-boilerplate",
  "version": "0.0.1",
  "main": "src/server.ts",
  "author": "Rodolfo Silva <contato@rodolfosilva.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env DEBUG=server* NODE_ENV=development nodemon -e ts,graphql -x ts-node src/server.ts",
    "debug": "cross-env DEBUG=server* NODE_ENV=development nodemon -e ts,graphql -x ts-node --inspect src/server.ts",
    "build": "cross-env NODE_ENV=production rimraf dist && tsc",
    "lint": "tslint -p tsconfig.json",
    "test": "jest"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cron": "^1.4.1",
    "debug": "^4.1.0",
    "dotenv": "^6.1.0",
    "dotenv-expand": "^4.2.0",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-yoga": "^1.16.6",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "merge-graphql-schemas": "^1.5.7",
    "moment": "^2.22.2",
    "mongoose": "^5.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cron": "^1.3.0",
    "@types/debug": "^0.0.31",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.5",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.117",
    "@types/mongodb": "^3.1.12",
    "@types/mongoose": "^5.2.19",
    "@types/node": "^10.12.0",
    "@types/supertest": "^2.0.6",
    "@types/ws": "^6.0.1",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-environment-node": "^23.4.0",
    "lint-staged": "^7.3.0",
    "mongodb-memory-server": "^2.6.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test && lint-staged"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|js)?(x)",
      "**/__tests__/**/*.(ts|js)?(x)"
    ],
    "globalSetup": "./scripts/jest-globalSetup.js",
    "globalTeardown": "./scripts/jest-globalTeardown.js",
    "preset": "ts-jest",
    "coverageDirectory": "./coverage/"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn run lint --fix",
      "prettier --parser typescript --write",
      "git add"
    ]
  }
}
